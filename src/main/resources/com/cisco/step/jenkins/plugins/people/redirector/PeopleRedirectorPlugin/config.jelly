<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <f:section title="${%People Redirector}">

<!-- TODO 6: for some reason the "convention over configuration" online help approach does not work. I have to give explicit help references instead. -->

    <f:entry field="redirectTarget" title="${%Redirect Target}" help="/plugin/people-redirector/help-redirectTarget.html">
      <f:textbox name="redirectTarget" value="${it.getRedirectTarget()}" />
    </f:entry>
    <f:entry title="" help="/plugin/people-redirector/help-disabled.html">
      <f:checkbox name="redirectDisabled" checked="${it.isDisabled()}" />
      <label class="attach-previous">${%Disable redirection}</label>
    </f:entry>
  </f:section>
</j:jelly>
